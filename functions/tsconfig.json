{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",           // <<-- optional อัปให้ใหม่กว่า es2017
    "types": ["node"],            // <<-- optional
    "resolveJsonModule": true     // <<-- optional
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
